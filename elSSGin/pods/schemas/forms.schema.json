{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.elginparksecondary.com/elSSGin/pods/schemas/forms.schema.json",
  "title": "Forms",
  "description": "Form list",
  "type": "array",
  "items": {
    "$ref": "#/definitions/form"
  },

  "definitions": {
    "form": {
      "description": "Form object",
      "type": "object",
      "properties": {
        "form-title": {
          "description": "Title of form",
          "type": "string",
          "examples": ["Math Flowchart", "Library Science Application Form"]
        },
        "id": {
          "description": "Form ID (a-z, 0-9, _)",
          "type": "string",
          "pattern": "^[a-z0-9_]*$",
          "examples": ["math_flowchart", "library_science_application"]
        },
        "path": {
          "description": "Relative path to form, with base /resources/forms/",
          "type": "string",
          "examples": ["Elgin Park Math Flowchart.pdf"]
        },
        "thumb": {
          "description": "Form thumbnail, usually first page of form, with base /resources/forms/thumb. If none, use path",
          "type": "string",
          "examples": ["Elgin Park Math Flowchart.webp"]
        }
      }
    }
  }
}