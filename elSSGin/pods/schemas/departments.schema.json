{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://elginparksecondary.com/elSSGin/pods/schemas/departments.schema.json",
  "title": "Departments",
  "description": "Departments (course pages), containing sections, containing courses",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of department",
      "type": "string",
      "examples": ["Business"]
    },
    "has-youtube": {
      "description": "Whether the department has any YouTube videos",
      "type": "boolean"
    },
    "sections": {
      "description": "Section objects",
      "type": "array",
      "items": {
        "$ref": "#/definitions/section"
      }
    }
  },
  "required": ["name", "has-youtube", "sections"],

  "definitions": {
    "section": {
      "description": "Section object",
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of section",
          "type": "string",
          "examples": ["Computing"]
        },
        "id": {
          "description": "ID (only lowercase, - and _)",
          "type": "string",
          "examples": ["computing"]
        },
        "youtube": {
          "description": "YouTube video ID",
          "type": "string"
        },
        "courses": {
          "description": "Course objects",
          "type": "array",
          "items": {
            "$ref": "#/definitions/course"
          }
        }
      },
      "required": ["name", "id", "courses"]
    },
    "course": {
      "description": "Course object",
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of course",
          "type": "string",
          "examples": ["Computer Programming 9"]
        },
        "code": {
          "description": "Course code, as it appears in MyEducation BC SIS",
          "type": "string",
          "examples": ["ABC--123"]
        },
        "grades": {
          "description": "Grade levels",
          "type": ["array"],
          "items": {
            "$ref": "#/definitions/grade"
          }
        },
        "elective": {
          "description": "Whether the coures is an elective",
          "type": "boolean"
        },
        "youtube": {
          "description": "YouTube video ID",
          "type": "string"
        },
        "desc": {
          "description": "Course description. Use <p> (no closing tag) to separate large blocks of text",
          "type": "string",
          "examples": ["This course includes web design and development...<p>Students will..."]
        }
      },
      "required": ["name", "code", "grades", "elective", "desc"]
    },
    "grade": {
      "description": "Grade level",
      "type": "number",
      "minimum": 8,
      "maximum": 12
    }
  }
}