{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://elginparksecondary.com/elSSGin/pods/schemas/clubs.schema.json",
  "title": "Clubs",
  "description": "Top-level club list",
  "type": "array",
  "items": {
    "$ref": "#/definitions/clubs"
  },

  "definitions": {
    "clubs": {
      "description": "Club object",
      "type": "object",
      "properties": {
        "name": {
          "description": "Club name",
          "type": "string",
          "examples": ["Computer Programming Club"]
        },
        "id": {
          "description": "Club ID (a-z, -, _)",
          "type": "string",
          "examples": ["computer_programming"]
        },
        "teams-code": {
          "description": "Code of club team in Microsoft Teams",
          "type": "string"
        },
        "meeting-days": {
          "description": "Array of meeting days, if club uses fixed-day meetings",
          "type": "array",
          "examples": [["Monday after school", "Wednesday after school"]]
        },
        "meeting-room": {
          "description": "Club's full meeting room, including last letter",
          "type": "string"
        },
        "sponsor": {
          "description": "Sponsor teacher of club",
          "type": "string"
        },
        "desc": {
          "type": "string",
          "examples": ["The Computer Programming Club is for anyone interested in programming, web design..."]
        },
        "claimed": {
          "description": "Whether the first edit request for this club was made (club is considered \"claimed\")",
          "type": "boolean"
        }
      },
      "required": ["name", "id", "meeting-room", "sponsor", "desc", "claimed"]
    }
  }
}